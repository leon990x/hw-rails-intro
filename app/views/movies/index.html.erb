<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <a id="title_header" onClick="<%= link_to 'Movie Title',movies_path(sort: 'title',ratings:@ratings),id:"title_header" %>"><th class="<%= ('hilite' if @sort == 'title') %>">Movie Title</th></a>
      <th>Rating</th>
      <a id="release_date_header" onClick="<%= link_to 'Release Date',movies_path(sort: 'release_date',ratings:@ratings),id:"release_date_header" %>"><th class="<%= ('hilite' if @sort == 'release_date') %>">Release Date</th></a>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>